        </StackPanel>
        <Label Content="Codigo de la categoria:" HorizontalAlignment="Left" Margin="500,50,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox Margin="10,76,476,124" Grid.Column="1">
            
